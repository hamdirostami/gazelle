<?xml version='1.0' encoding='UTF-8'?>

<faces-config xmlns="http://java.sun.com/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd"
              version="2.0">

    <application>
        <el-resolver>org.springframework.web.jsf.el.SpringBeanFacesELResolver</el-resolver>

        <locale-config>
            <default-locale>en</default-locale>
            <supported-locale>en</supported-locale>
            <supported-locale>fa</supported-locale>
        </locale-config>

        <resource-bundle>
            <base-name>labels</base-name>
            <var>label</var>
        </resource-bundle>
        <resource-bundle>
            <base-name>person_labels</base-name>
            <var>personlabel</var>
        </resource-bundle>
    </application>

    <component>
        <component-type>org.primefaces.component.InputText</component-type>
        <component-class>com.pooyaco.gazelle.web.component.PooyaInputText</component-class>
    </component>
    <render-kit>
        <renderer>
            <component-family>org.primefaces.component</component-family>
            <renderer-type>org.primefaces.component.InputTextRenderer</renderer-type>
            <renderer-class>com.pooyaco.gazelle.web.component.PooyaInputTextRenderer</renderer-class>
        </renderer>
    </render-kit>

</faces-config>